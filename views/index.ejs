<!--Head-->
<%- include('./partials/head') %> 
<!--Head-->

<body>
	
	<!--Header-->
	<% if (locals.user != undefined) { %>
		<%- include('./partials/headerLogueado') %>
	<% } else {%>
		<%- include('./partials/headerDeslogueado') %>
	<% } %> 
	<!--Header-->

	<!-- Banner -->
	<div class="banner">
		<img src="/images/otroBanner.png" alt="Banner de ofertas">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<!-- <% for( let i = 1; i < 8; i++ ) { %> -->
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/product/id/<%= data[1].id %>">
							<figure class="product-box_image">
								<img src="<%= data[1].imagen %>" alt="<%= data[1].nombre %> ">
							</figure>
							<article class="product-box_data">
								<h2> <%= data[1].nombre %> </h2>
								<p> <%= data[1].descripcion %> </p>
								<p>Comentarios: 12</p>
							</article>
						</a>
					</section>
				</div>
			<!-- <% } %> -->
		</div>
	</div>
	<!-- Novedades -->

		<!-- Más comentados -->
		<div class="container products-wrapper">
			<div class="row">
				<div class="col-12">
					<h2 class="products-title">Más comentados</h2>
				</div>
				<!-- Show the "ultimos" products -->
				<!-- <% for( let i = 1; i < 4; i++ ) { %> -->
					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href="/product/id/<%= data[0].id %>">
								<figure class="product-box_image">
									<img src="<%= data[0].imagen %> " alt="<%= data[0].nombre %> ">
								</figure>
								<article class="product-box_data">
									<h2> <%= data[0].nombre %> </h2>
									<p> <%= data[0].descripcion %> </p>
									<p>Comentarios: 12</p>
								</article>
							</a>
						</section>
					</div>
				<!-- <% } %> -->
			</div>
		</div>
	</div>
	<!-- Más comentados -->

	<!-- Footer -->
	<%- include('./partials/footer') %>
	<!-- Footer -->

</body>	
</html>