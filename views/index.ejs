<!--Head-->
<%- include('./partials/head') %> 
<!--Head-->

<body>
	
	<!--Header-->
	<%- include('./partials/headerNormal') %>
	<!--Header-->

	<!-- Banner -->
	<div class="banner">
		<img src="/images/img-home-banner.jpg" alt="Banner de ofertas">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for( let i = 0; i < data.length; i++ ) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/product">
							<figure class="product-box_image">
								<img src="<%= data[i].imagen %>" alt="<%= data[i].nombreProducto %> ">
							</figure>
							<article class="product-box_data">
								<h2> <%= data[i].nombreProducto %> </h2>
								<p> <%= data[i].descripcion %> </p>
								<p>Comentarios: 12</p>
							</article>
						</a>
					</section>
				</div>
			<% } %>
		</div>
	</div>
	<!-- /MÃ¡s comentados -->

	<!-- Footer -->
	<%- include('./partials/footer') %>
	<!-- Footer -->

</body>	
</html>