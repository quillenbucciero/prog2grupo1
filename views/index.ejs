<!--Head-->
<%- include('./partials/head') %> 
<!--Head-->

<body>
	
	<!--Header-->
	<% if (locals.usuario != undefined) { %>
		<%- include('./partials/headerLogueado') %>
	<% } else {%>
		<%- include('./partials/headerDeslogueado') %>
	<% } %> 
	<!--Header-->

	<!-- Banner -->
	<div class="banner">
		<img src="/images/otroBanner.png" alt="Banner de ofertas">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for( let i = 0; i < data.length ; i++ ) { %> 
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href= "/product/id/<%= data[i].id %>">
							<figure class="product-box_image">
								<img src="<%= data[i].imagen %>" alt="<%= data[i].nombre %>">
							</figure>
							<article class="product-box_data">
								<h2> <%= data[i].nombre %> </h2>
								<p> <%= data[i].descripcion %> </p> 
								<p> Cargado a la página por: <%= data[i].usuarios.nombre %> <%= data[i].usuarios.apellido %></p> <!-- CAMBIAR LINK DESPUES!! DE USUARIOS-->
								
							</article>
						</a>
					</section>
				</div>
			<% } %> 
		</div>
	</div>
	<!-- Novedades -->

		<!-- Más comentados -->
		<div class="container products-wrapper">
			<div class="row">
				<div class="col-12">
					<h2 class="products-title">Más comentados</h2>
				</div>
				<!-- Show the "ultimos" products -->
				<% for( let i = 0; i < data.length ; i++ ) { %> 
					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href= "/product/id/<%= data[i].id %>">
								<figure class="product-box_image">
									<img src="<%= data[i].imagen %>" alt="<%= data[i].nombre %>">
								</figure>
								<article class="product-box_data">
									<h2> <%= data[i].nombre %> </h2>
									<p> <%= data[i].descripcion %> </p> 
									<p> Cargado a la página por: <%= data[i].usuarios.nombre %> <%= data[i].usuarios.apellido %></p> <!-- CAMBIAR LINK DESPUES!! DE USUARIOS-->
								</article>
							</a>
						</section>
					</div>
				<% } %> 
			</div>
		</div>
	</div>
	<!-- Más comentados -->

	<!-- Footer -->
	<%- include('./partials/footer') %>
	<!-- Footer -->

</body>	
</html>