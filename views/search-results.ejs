<!-- Head -->
<%- include('./partials/head') %> 

<body>
		<!--Header-->
		<% if (locals.user != undefined) { %>
			<%- include('./partials/headerLogueado') %>
		<% } else {%>
			<%- include('./partials/headerDeslogueado') %>
		<% } %> 
		<!--Header-->

	<!-- Resultados -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
					<h2 class="products-title">Resultados de b√∫squeda</h2>
			</div>
			<!-- Show the "ultimos" products -->
		</div>
	</div>

	<% for( let i = 0; i < resultados.length; i++ ) { %>

		<div class="col-12 col-sm-6 col-lg-3">
			<section class="product-box">
					<a href="/product/id/<%= resultados[i].id%>">
						<figure class="product-box_image">
							<img src="<%= resultados[i].imagen %> " alt="<%= resultados[i].nombre %> ">
						</figure>
						<article class="product-box_data">
							<h2><%= resultados[i].nombre %> </h2>
							<p><%= resultados[i].descripcion %></p>
						</article>
					</a>
			</section>
		</div>
		<% } %>

	<!-- footer -->
	<%- include('./partials/footer') %> 
	<!-- /footer -->
</body>

</html>