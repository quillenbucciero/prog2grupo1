<!--Head-->
<%- include('./partials/head') %> 
<!--Head-->

<body>
	
		<!--Header-->
		<% if (locals.user != undefined) { %>
			<%- include('./partials/headerLogueado') %>
		<% } else {%>
			<%- include('./partials/headerDeslogueado') %>
		<% } %> 
		<!--Header-->
	
	<!-- product detail -->
	<div class="container products-wrapper">
		<div class="d-flex align-items-center">
			<h2 class="products-title"><%= productos[id].nombreProducto %></h2> 
			<p class="product-detail-description">
				<a href="/product/add">Editar</a>
			</p>
		</div>
		<div class="product-detail">
			<div class="row">
				<article class="col-12 col-lg-8 product-detail-info">
					<img src= <%= productos[id].imagen %>  alt="Leche de Almendras" class="product-detail-img">
					<p class="product-detail-description"> <%= productos[id].descripcion %> </p>
				</article>

			<!--Comentarios-->
				<div class="col-12 col-lg-4">
					<section class="comments">
						<% for( let i = 0; i < data.length; i++ ) { %>
							<article>
								<img src="https://via.placeholder.com/35" alt="Foto de perfil">
								<div class="data">
									<p class="user">
										<strong> <a href="/profile"><%= comentarios[i].usuario %></strong></a> 
										<%= comentarios[i].textoDelComentario %> 
									</p>
								</div>
							</article>  
						<% } %>
					</section>
					<form class="form" action="/product/id" method="get">
						<input class="form-input" type="text" value="" placeholder="Agregar comentario">
						<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
					</form>
					<hr>
				</div>
			<!--Comentarios-->
			</div>
		</div>
	</div>
	<!-- /product detail -->

	<!-- Footer -->
	<%- include('./partials/footer') %> 
	<!-- Footer -->
	
</body>	
</html>