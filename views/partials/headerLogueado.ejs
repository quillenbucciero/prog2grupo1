
	<!-- Header -->
	<header class="main-header">
		<div class="container">

			<div class="row align-items-center">
				<!-- En vez del logo, la foto de perfil -->
				<% if(locals.user =! undefined) {%> 
				<div class="col-5 col-md-2">
					<a href="/" class="main-header_home-link">
						<img src="/images/users/ <%= user.fotoDePerfil %>" alt="Foto de perfil de <%= user.nombre %> ">
					</a>
				</div>
				<% }else{ %> 
				<div class="col-5 col-md-2">
					<a href="/" class="main-header_home-link">
						<img src="/images/logo.png">
					</a>
				</div>
				<% } %> 
	
				<div class="col-7 col-md-6">
					<form action="/search-results/id" method="GET" class="search-form">
						<input type="text" name="search" placeholder="Buscar productos, marcas y más" class="search-form_input">
						<button type="submit" class="search-form_button"><i class="fas fa-search"></i></button>
					</form>
				</div>
	
				<div class="col-12 col-md-4">
					<a class="main-header_credit-link">
						<i class="fas fa-hand-holding-usd"></i>
						Todas las opiniones en un solo lugar.
					</a>
				</div>
			</div>
	
			<button class="btn-toggle-navbar">
				<i class="fas fa-bars"></i>
			</button>
	
					<nav class="main-navbar">
					<ul class="left-navbar">
						<li><a href="/">Todos los productos</a></li>
					<% if (locals.user != undefined) { %>
						<li><a href="/product/id">Cargar productos</a></li>
					<% } %>
					</ul>
		
					<% if (locals.user != undefined) { %>
					
					<ul class="right-navbar">
						<!--link a  mi perfil-->
						<li><a href="/profile"> 
							<%= locals.user.name %> <i class="fas fa-user"></i>
							</a>
						</li>
					<li><a href="/profile">
							Bienvenido <%= locals.user.name %> <i class="fas fa-user"></i>
						</a>
					</li>
					<li>
						<!--<form action="/" method="get">
							<button class="logout" type="submit">
								Cerrar sesión <i class="fas fa-sign-in-alt"></i>
							</button>
						</form> -->
						<a href="/"> Cerrar sesión <i class="fas fa-sign-in-alt"></i> </a>
					</li>
					<% } %>

					<% else { %>
					<li>
						<a href="/register">Creá tu cuenta <i class="far fa-address-card"></i>
						</a>
					</li>
					<li>
						<a href="/login">Ingresá <i class="fas fa-sign-in-alt"></i></a>
					</li> -->

					<% } %>
					
					
				</ul>
			</nav>
		</div>
	</header>
	<!-- /Header -->
